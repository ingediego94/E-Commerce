                    <li><a class="dropdown-item" href="#!">Cerrar Sesión</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link" href="index.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>
                        <!--Agregamos este nuevo dashboard que le cambiamos el nombre a Usuarios, y le cambiamos el nombre de la clase
    de   class="fas fa-tachometer-alt"    a     class="fas fa-users"  para que cambie el icono-->
                        <a class="nav-link" href="index.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Usuarios
                        </a>

                        @*TODO LO SIGUIENTE LO COMENTAMOS PORQUE NECESITAMOS ELIMINARLO DEL LAYOUT*@
                        @*Aqui es donde eliminamos desde el Interface hasta Adons*@

                        @*Cambiamos "Adons" por Mantenimiento*@
                        <div class="sb-sidenav-menu-heading">Mantenimiento</div>
                        @*Agregamos Categorias, Marcas y Productos.*@
                        @*Categorias*@
                        <a class="nav-link" href="charts.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Categorias
                        </a>
                        @*Marcas*@
                        <a class="nav-link" href="tables.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-bookmark"></i></div>
                            Marca
                        </a>
                        @*Productos*@
                        <a class="nav-link" href="tables.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-boxes"></i></div>
                            Productos
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    Start Bootstrap
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <!--CONTENEDOR-->
                <div class="container-fluid px-4">

                    <!--Aqui se inserta el contenido intermedio (variable) de la master page-->
                    @RenderBody()

                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>  <!--AQUI FINALIZA EL CODIGO EXTRAIDO DE LA PLANTILLA-->
    @*Menus de navegacion
        <li>@Html.ActionLink("Inicio Pagina", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
